			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-2915614"/>
				<property name="y" value="-4324501"/>
				<property name="width" value="5600000"/>
				<property name="height" value="21000000"/>
			</bean>
		</property>
		<property name="layers">
